<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gris"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:background="@drawable/stop_selector"
        android:src="@mipmap/play"
        android:id="@+id/playpause"
        android:layout_height="match_parent"
        android:layout_width="80dp" />

    <LinearLayout
        android:id="@+id/gggggg"
        android:layout_toLeftOf="@id/closeBtn"
        android:layout_toRightOf="@id/playpause"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@+id/songTxt"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/close_selector"
                android:src="@mipmap/previous"
                android:layout_marginEnd="2dp" />
            <TextView
                android:layout_marginRight="2dp"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:layout_marginEnd="2dp" />
            <ImageButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/random"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/close_selector"
                android:src="@mipmap/shuffle_white_24dp"
                android:layout_marginEnd="2dp" />
            <TextView
                android:layout_marginRight="2dp"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:layout_marginEnd="2dp" />
            <ImageButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/close_selector"
                android:src="@mipmap/repeat_white_24dp" />

            <TextView
                android:layout_marginRight="2dp"
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/colorAccent"
                android:layout_marginEnd="2dp" />
            <ImageButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/close_selector"
                android:src="@mipmap/next" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@drawable/close_selector"
        android:id="@+id/closeBtn"
        android:src="@mipmap/close_red_500_24dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</RelativeLayout>